<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile_User">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:background="@drawable/biaa"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_ack" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="35dp">
            <ImageView
                android:id="@+id/imgAvata_TTV"
                android:layout_width="79dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
            <ImageView
                android:id="@+id/btnChupHinhAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/ic_camera" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edt_name_profile"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edt_sdt_profile"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Số điện thoại"/>
    </LinearLayout>
    <Button
        android:id="@+id/update_profile"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:layout_marginTop="20dp"
        android:text="Chỉnh sửa"/>
</LinearLayout>